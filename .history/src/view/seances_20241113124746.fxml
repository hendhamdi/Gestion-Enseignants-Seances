<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.paint.Color?>

<ScrollPane fitToWidth="true" stylesheets="@../css/seances.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.SeanceController">
    <VBox spacing="10" style="-fx-padding: 20;">
        <Region style="-fx-opacity: 0.5;" styleClass="background-overlay"/>
        
        <!-- Titre de la page -->
        <Label text="Les séances de cours dans la semaine pour une matière dans une classe." styleClass="titre"/>
        
        <!-- Formulaire de recherche des séances -->
        <GridPane hgap="10" vgap="10">
            <Label text="Classe :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="classeComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            
            <Label text="Matière :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="matiereComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            
            <Button text="Chercher" onAction="#chercherSeance" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Button text="Requêtes" onAction="#ouvrirRequetes" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            
            <Label text="ID :" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <ComboBox fx:id="idComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            
            <Button text="Supprimer" onAction="#supprimerSeance" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        </GridPane>
        
        <!-- Tableau des résultats des séances -->
        <Label text="Liste des séances" styleClass="titre"/>
        <TableView fx:id="resultList">
            <columns>
                <TableColumn text="Classe" fx:id="classeColumn"/>
                <TableColumn text="Matière" fx:id="matiereColumn"/>
                <TableColumn text="Jour" fx:id="jourColumn"/>
                <TableColumn text="Heure" fx:id="heureColumn"/>
            </columns>
        </TableView>
    </VBox>
</ScrollPane>
