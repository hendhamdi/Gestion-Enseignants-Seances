<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="798.0" prefWidth="1180.0" spacing="20" style="-fx-padding: 20;" styleClass="root" stylesheets="@../css/login.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <Label text="Connexion Administrateur" style="-fx-font-size: 18px;"/>
    <TextField fx:id="emailField" promptText="Email" />
    <PasswordField fx:id="passwordField" promptText="Mot de passe" />
    <Button text="Se connecter" fx:id="loginButton" onAction="#handleLogin" />
    <Label fx:id="errorMessage" text="" style="-fx-text-fill: red;"/>
</VBox>

