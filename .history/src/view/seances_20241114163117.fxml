<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>

<ScrollPane fitToWidth="true" stylesheets="@../css/seances.css" prefHeight="802.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SeanceController">
    <VBox fx:id="contentVBox" prefHeight="796.0" prefWidth="1198.0" spacing="20" style="-fx-padding: 20;">
       <Region styleClass="root" />
        <Label styleClass="titre" text="Les séances de cours dans la semaine pour une matière dans une classe." />

        <!-- Formulaire de recherche des séances -->
        <VBox spacing="15" style="-fx-padding: 15;">
            <GridPane hgap="10" vgap="10">
                <Label text="Classe :" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <ComboBox fx:id="classeComboBox" prefHeight="30.0" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="Matière :" GridPane.rowIndex="1" />
                <ComboBox fx:id="matiereComboBox" prefHeight="30.0" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Button onAction="#chercherSeance" text="Chercher" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            </GridPane>
        </VBox>

        <!-- Tableau des résultats des séances -->
        <VBox prefHeight="364.0" prefWidth="1079.0" spacing="15">
            <Label styleClass="titre" text="Liste des séances" />
            <ScrollPane fitToWidth="true" prefHeight="250.0" prefWidth="1000.0">
                <TableView fx:id="resultList" prefHeight="284.0" prefWidth="600.0">
                    <columns>
                        <TableColumn fx:id="classeColumn" text="Classe" />
                        <TableColumn fx:id="matiereColumn" text="Matière" />
                        <TableColumn fx:id="jourColumn" text="Jour" />
                        <TableColumn fx:id="heureColumn" text="Heure" />
                    </columns>
                </TableView>
            </ScrollPane>
        </VBox>
    </VBox>
</ScrollPane>
